{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["Chores/scripts/**/*", "Chores/engineering/config.ts", "Chores/engineering/main.ts", "Chores/engineering/ruleProcessor.ts", "Chores/engineering/types.ts", "Chores/engineering/utils.ts"],
  "exclude": ["node_modules"]
}