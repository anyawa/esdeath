{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "extensionAlias": {
      ".js": [".ts", ".js"]
    }
  },
  "include": [
    "Chores/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}